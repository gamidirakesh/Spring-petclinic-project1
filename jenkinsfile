pipeline {
    agent any
    stages {
        stage('SCM Checkout') {
            steps {
                git '
https://github.com/sriison/spring-petclinic.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install -DskipTests=true -Dcobertura.skip=true'
            }
        }
        stage('Image Build') {
            steps {
                sh 'sudo docker build -t srini-test .'
            }
        }
    }
}
